generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum CompanyType {
  Client
  Livreur
  Fournisseur
}

enum OrderType {
  Achats
  Ventes
}

enum PaintType {
  PVC
  EAU
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  password  String
}

model Color {
  id        Int     @id @default(autoincrement())
  name      String
  htmlCode  String
  Product   ProductColor[]
  OrderLine OrderLineColor[]
}

model Company {
  id       Int     @id @default(autoincrement())
  name     String
  type     String
  location String?
  phone    String?

  customer Order[] @relation("CustomerOrders")
  supplier Order[] @relation("SupplierOrders")
  Shipping Shipping[]
  designs  CompanyDesign[]
}

model CompanyDesign {
  id        Int     @id @default(autoincrement())
  designUrl String
  designName String
  companyId Int
  Company   Company @relation(fields: [companyId], references: [id])
}

model Expense {
  id         Int      @id @default(autoincrement())
  name       String
  totalPrice Decimal  @db.Decimal(10, 2)
  date       DateTime
  orderId    Int?
}

model Order {
  id          Int      @id @default(autoincrement())
  customerId  Int
  supplierId  Int
  orderType   String
  orderStatus Int
  totalPrice  Decimal  @db.Decimal(10, 2)
  date         DateTime
  designUrl   String

  customer    Company  @relation("CustomerOrders", fields: [customerId], references: [id])
  supplier    Company  @relation("SupplierOrders", fields: [supplierId], references: [id])
  OrderLine  OrderLine[]
  Shipping    Shipping?
}

model OrderLine {
  orderId   Int
  productId Int
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  paintType String
  Order     Order   @relation(fields: [orderId], references: [id])
  Product   Product @relation(fields: [productId], references: [id])
  Colors    OrderLineColor[]

  @@id([orderId, productId])
}

model OrderLineColor {
  orderId Int
  productId Int
  colorId Int

  OrderLine OrderLine @relation(fields: [orderId, productId], references: [orderId, productId])
  Color     Color     @relation(fields: [colorId], references: [id])

  @@id([orderId, productId, colorId])
}

model Product {
  id            Int            @id @default(autoincrement())
  name          String
  size          String?
  productTypeId Int
  threshold     Int
  totalQuantity Int
  ProductType   ProductType    @relation(fields: [productTypeId], references: [id])
  OrderLine     OrderLine[]
  colors        ProductColor[]
}

model ProductColor {
  productId Int
  colorId   Int

  Product   Product @relation(fields: [productId], references: [id])
  Color     Color   @relation(fields: [colorId], references: [id])

  @@id([productId, colorId])
}

model ProductType {
  id      Int     @id @default(autoincrement())
  name    String
  sellable Boolean
  Product Product[]
}

model Shipping {
  orderId      Int @id
  shipperId    Int
  shippingDate DateTime?
  deliveryDate DateTime?
  price        Decimal @db.Decimal(10, 2)

  Order        Order   @relation(fields: [orderId], references: [id])
  shipper      Company @relation(fields: [shipperId], references: [id])
}